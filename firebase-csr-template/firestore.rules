rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to validate email
    function isValidEmail(email) {
      return email.matches('.*@.*\\..*');
    }

    // Helper function to check if data has required fields
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
        && hasRequiredFields(['email', 'createdAt'])
        && isValidEmail(request.resource.data.email);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Example: Public posts collection
    match /posts/{postId} {
      // Anyone can read posts
      allow read: if true;
      
      // Only authenticated users can create posts
      allow create: if isAuthenticated() 
        && hasRequiredFields(['title', 'content', 'userId', 'createdAt'])
        && request.resource.data.userId == request.auth.uid;
      
      // Only the owner can update/delete their posts
      allow update, delete: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
    }

    // Example: Private notes collection
    match /notes/{noteId} {
      allow read, write: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
